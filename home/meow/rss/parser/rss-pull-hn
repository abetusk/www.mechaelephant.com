#!/bin/bash

feed="$1"

if [[ "$feed" == "" ]] ; then
  echo "provide rss feed"
  exit 1
fi

wget -q "$feed" -O - | \
  xmltojson | \
  jq -c \
    '.rss.channel.item[] | { "feed": "'$feed'", "guid":.comments, "title" : .title, "link":.link, "description":.description, "content":"", "pubDate":.pubDate } '


